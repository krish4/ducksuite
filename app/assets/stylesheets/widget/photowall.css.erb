#ds-widget {
  padding: 20px !important;
  padding-bottom: 10px !important;
}

#ds-widget #photowall {
  overflow: hidden !important;
}

#ds-widget #photowall .photowall-image {
  border: 5px solid white !important;
  float: left !important; 
  margin-bottom: 20px !important;
  margin-right: 20px !important; 
}

#ds-widget #photowall .photowall-image .ds-fancybox .slick-slider-img {
  width: 200px !important; 
  height: 200px !important;
  transition: .5s opacity ease !important;
  -webkit-transition: .5s opacity ease !important;
  -moz-transition: .5s opacity ease !important;
  -o-transition: .5s opacity ease !important;
}

#ds-widget #photowall .photowall-image .ds-fancybox .slick-slider-img:hover {
  opacity: 0.8 !important;
}

#ds-load-more {
  margin: 0 auto 15px !important; 
  background-color: white;
  width: 180px !important;
  height: 40px !important;
  line-height: 42px !important;
  text-align: center !important;
  cursor: pointer !important;
  color: #8F8F8F !important;
  border-bottom: 3px solid #e67e22 !important;
  font-weight: 600 !important;
  transition: .5s color ease !important;
  -webkit-transition: .5s color ease !important;
  -moz-transition: .5s color ease !important;
  -o-transition: .5s color ease !important;
}

#ds-load-more:hover {
  color: black !important;
}