#ds-widget {
  padding: 20px 64px !important;
}

#ds-widget #slider {
  margin: 0 auto !important; 
  width: 90% !important;
}

#ds-widget #slider .image .ds-fancybox .slick-slider-img {
  border: 5px solid white !important;
  height: 200px !important; 
  width: 200px !important; 
}

#ds-widget #slider .arrow {
  cursor: pointer !important; 
  height: 64px !important; 
  position: absolute !important; 
  top: 73px !important; 
  width: 64px !important; 
}

#ds-widget #slider .slick-prev {
  background-image: url(<%= image_url "widget-arrow-prev.png"%>) !important; 
  left: -64px !important;
}

#ds-widget #slider .slick-next {
  background-image: url(<%= image_url "widget-arrow-next.png"%>) !important; 
  right: -64px !important;
}